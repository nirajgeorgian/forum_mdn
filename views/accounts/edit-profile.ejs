<div class="container main_signup_body">
<% layout('layout') -%>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <% if (message.length > 0) { %>
    <div class="alert alert-success alert-dismissible">
      <button class="close" data-dismiss="alert" aria-label="Close" type="button">
        <span aria-hidden="true">&times;</span>
      </button>
    <%= message %>
    </div>
  <% } %>

    <form action="" method="post">

      <h2>Edit Profile</h2>

      <div class="form-group">
        <label for="name">Username:</label>
          <input type="text" class="form-control" name="name" value="<%= user.profile.name %>">
      </div>
      <div class="form-group">
        <label for="firstname">Firstname:</label>
          <input type="text" class="form-control" name="firstname" value="<%= user.firstname %>">
      <div class="form-group">
        <label for="lastname">Lastname:</label>
          <input type="text" class="form-control" name="lastname" value="<%= user.lastname %>">
      </div>
      <div class="form-group">
        <label for="place">Place</label>
          <input type="text" class="form-control" name="place" value="<%= user.place %>">
      </div>
      <div class="form-group">
        <label for="about">About</label>
          <textarea rows="4" class="form-control" name="about"><%= user.about %></textarea>
      </div>
      <div class="form-group">
        <label for="address">Address:</label>
          <input type="text" class="form-control" name="address" value="<%= user.address %>">
      </div>
      <button class="btn btn-default" type="submit">Submit</button>
    </form>
  </div>
</div>
</div>
