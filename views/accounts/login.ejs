<% layout('layout') -%>

  <% if (message.length > 0) { %>
    <div class="alert alert-danger alert-dismissible">
      <button class="close" data-dismiss="alert" aria-label="Close" type="button">
        <span aria-hidden="true">&times;</span>
      </button>
    <%= message %>
    </div>
  <% } %>
  <% if (reset.length > 0) { %>
    <div class="alert alert-success alert-dismissible">
      <button class="close" data-dismiss="alert" aria-label="Close" type="button">
        <span aria-hidden="true">&times;</span>
      </button>
    <%= reset %>
    </div>
  <% } %>

<div class="container-fluid">
  <div class="row">

    <div class="col-md-6">
      <div id="login_form">
          <form action="/login" method="POST" class="form-horizontal" id="loginForm">
            <div class="form-group">
                <label class="col-lg-3 control-label">Email</label>
                <div class="col-lg-9">
                    <input type="email" class="form-control" name="email" placeholder="Email"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Password</label>
                <div class="col-lg-9">
                    <input type="password" class="form-control" name="password" placeholder="password"/>
                </div>
            </div>
            <div class="login_btn">
              <button class="btn btn-info" type="submit">Login</button>
            </div>
            <br>
            <fieldset>
              <legend>Forgot your password</legend>
              <div class="login_btn">
                <a href="/forgot" class="btn btn-info">Forgot password</a>
              </div>
            </fieldset>
          </form>
        </div>
    </div>
    <div class="col-md-6">
      <img src="./img/01.png" alt="" class="center-block img-responsive img_login" id="logo_header" />
    </div>
  </div>
</div>
